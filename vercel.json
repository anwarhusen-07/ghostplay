{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(signup|login|logout|request-otp|save-user-progress|save-user-score|get-user-progress|api/contact)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}